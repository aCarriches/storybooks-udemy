<div class="row">
  <h3 class="col s12">
    {{story.title}}
    <small>{{{editIcon story.user.id user.id story.id false}}}</small>
  </h3>
  <div class="col s12 m8">
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate story.date 'LL'}}</span>
        <div class="story-body">
          {{{story.body}}}
        </div>
      </div>
    </div>
    {{#if story.allowComments}}
      <div class="card">
        <div class="card-content">
          <h5 class="card-title mt-0">Comments</h5>
          {{#if user}}
            <form action="/stories/comment/{{story.id}}" method="POST">
              <div class="input-field">
                <textarea name="commentBody" id="commentBody" class="materialize-textarea"></textarea>
                <label for="commentBody">Add comment</label>
              </div>
              <input type="submit" value="submit" class="btn">
            </form>
          {{else}}
            <p>Please, <a href="/auth/google">log in</a> to leave a comment.</p>
          {{/if}}
        </div>
      </div>
      {{#each story.comments}}
      <div class="card">
        <div class="card-content">
          <p>{{commentBody}}</p>
          <div class="chip mt-3">
            <img src="{{commentUser.image}}" alt="Contact Person">
            <a href="/stories/user/{{commentUser.id}}">{{commentUser.firstName}} {{commentUser.lastName}}</a>
          </div>
          <small>Posted: {{formatDate commentDate 'LL'}}</small>
        </div>
      </div>
      {{/each}}
    {{/if}}
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.firstName}} {{story.user.lastName}}</span>
        <img class=" circle responsive-img" src="{{story.user.image}}" alt="{{story.user.firstName}} {{story.user.lastName}} avatar">
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user.id}}">More from {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>