<h1>Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m6">
    <div class="card">
      <div class="card-image">
        {{#if user}}
        {{{editIcon user.id ../user.id id}}}
        {{/if}}
      </div>
      <div class="card-content center-align">
        <h5 class="story-title"><a href="/stories/show/{{id}}">{{title}}</a></h5>
        <p class="story-text">{{stripTags (truncate body 150)}}</p>
        <div class="chip mt-3">
          <img src="{{user.image}}" alt="Contact Person">
          <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
        </div>
      </div>
      <div class="card-action center-align">
        <a href="/stories/show/{{id}}" class="btn grey">Read More</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found.</p>
  {{/each}}
</div>